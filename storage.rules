rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.role in ['superadmin', 'coordinacion'];
    }

    function canUpload() {
      return request.auth.token.role in ['superadmin', 'coordinacion', 'docente', 'tallerista'];
    }

    match /public/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if canUpload();
    }

    match /private/children/{childId}/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || request.auth.uid in firestore.get(/databases/(default)/documents/children/$(childId)).data.responsables);
      allow write: if isAdmin();
    }

    match /private/appointments/{appointmentId}/notes/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || ((request.auth.uid == firestore.get(/databases/(default)/documents/appointments/$(appointmentId)).data.familiaUid || request.auth.uid in firestore.get(/databases/(default)/documents/appointments/$(appointmentId)).data.get('familiasUids', [])) && firestore.get(/databases/(default)/documents/appointments/$(appointmentId)/notes/summary).data.visibilidad == 'familia'));
      allow write: if isAdmin();
    }

    match /talleres/{tallerId}/gallery/{fileName} {
      allow read: if isAuthenticated();
      allow create, update: if (isAdmin() || (isAuthenticated() && request.auth.uid in firestore.get(/databases/(default)/documents/talleres/$(tallerId)).data.talleristaId))
                            && request.resource.size < 20 * 1024 * 1024;
      allow delete: if isAdmin() || (isAuthenticated() && request.auth.uid in firestore.get(/databases/(default)/documents/talleres/$(tallerId)).data.talleristaId);
    }

    match /talleres/{tallerId}/albums/{albumId}/{fileName} {
      allow read: if isAuthenticated();
      allow create, update: if (isAdmin() || (isAuthenticated() && request.auth.uid in firestore.get(/databases/(default)/documents/talleres/$(tallerId)).data.talleristaId))
                            && request.resource.size < 20 * 1024 * 1024;
      allow delete: if isAdmin() || (isAuthenticated() && request.auth.uid in firestore.get(/databases/(default)/documents/talleres/$(tallerId)).data.talleristaId);
    }

    match /documents/{category}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.token.role in ['superadmin', 'coordinacion'] || (request.auth.token.role == 'tallerista' && category == 'taller'));
    }

    match /communications/{commId}/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || request.auth.uid in firestore.get(/databases/(default)/documents/communications/$(commId)).data.destinatarios);
      allow write: if isAuthenticated() && (request.auth.token.role in ['superadmin', 'coordinacion', 'docente']);
    }

    match /conversations/{convId}/{messageId}/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || request.auth.uid == firestore.get(/databases/(default)/documents/conversations/$(convId)).data.familiaUid || (request.auth.token.role == 'coordinacion' && firestore.get(/databases/(default)/documents/conversations/$(convId)).data.destinatarioEscuela == 'coordinacion') || (request.auth.token.role == 'superadmin'));
      allow write: if isAuthenticated() && (isAdmin() || request.auth.uid == firestore.get(/databases/(default)/documents/conversations/$(convId)).data.familiaUid);
    }

    match /institutional-gallery/{categorySlug}/albums/{albumId}/{fileName} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated()
                            && request.auth.token.role in ['superadmin', 'coordinacion', 'docente']
                            && request.resource.size < 20 * 1024 * 1024;
      allow delete: if isAuthenticated()
                    && request.auth.token.role in ['superadmin', 'coordinacion', 'docente'];
    }

    match /institutional-gallery/{categorySlug}/category/{fileName} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated()
                            && request.auth.token.role in ['superadmin', 'coordinacion', 'docente']
                            && request.resource.size < 20 * 1024 * 1024;
      allow delete: if isAuthenticated()
                    && request.auth.token.role in ['superadmin', 'coordinacion', 'docente'];
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
