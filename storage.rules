rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Funciones auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.role in ['direccion', 'coordinacion', 'admin'];
    }

    function canUpload() {
      return request.auth.token.role in ['direccion', 'coordinacion', 'admin', 'teacher', 'tallerista'];
    }

    // Public: autenticados leen, admin/docentes/talleristas escriben
    match /public/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if canUpload();
    }

    // Private: solo admin y responsables del niño
    match /private/children/{childId}/{fileName} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        request.auth.uid in firestore.get(/databases/(default)/documents/children/$(childId)).data.responsables
      );
      allow write: if isAdmin();
    }

    // Talleres: galerías de fotos/videos (Fase 5)
    match /talleres/{tallerId}/gallery/{fileName} {
      // Leer: Todos los autenticados
      allow read: if isAuthenticated();

      // Escribir: Admin o tallerista del taller
      allow write: if isAdmin() || (
        isAuthenticated() &&
        request.auth.uid in firestore.get(/databases/(default)/documents/talleres/$(tallerId)).data.talleristaId
      );
    }

    // Documentos institucionales (Fase 5)
    match /documents/{category}/{fileName} {
      // Leer: Admin o usuarios cuyo rol está en roles[] del documento
      allow read: if isAuthenticated() && (
        isAdmin() ||
        request.auth.token.role in firestore.get(/databases/(default)/documents/documents/$(fileName)).data.roles
      );

      // Escribir: Admin o talleristas
      allow write: if isAdmin() || (
        isAuthenticated() &&
        request.auth.token.role == 'tallerista'
      );
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
